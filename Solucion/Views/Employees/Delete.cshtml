@model Solucion.Models.Employee

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5 bg-dark text-light" style="padding: 60px;">
                    <div class="text-center">
                        <h2>Deseas eliminar el Usuario @Model.Name @Model.LastName?</h2>
                        <hr>
                        <p><strong>Id: </strong>@Model.Id</p>
                        <p><strong>Email: </strong>@Model.Email</p>
                        <p><strong>Phone: </strong>@Model.Phone</p>
                        <p><strong>Address: </strong>@Model.Address</p>
                        <p><strong>Password: </strong>@Model.Password</p>
                        <p><strong>Role: </strong>@Model.Role</p>
                        <br>
                        <form asp-controller="Employees" asp-action="DeleteConfirmed" method="post">
                            <input type="hidden" asp-for="Id">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a class="btn btn-secondary" asp-controller="Employees" asp-action="Home">Cancelar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>