<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5 bg-dark text-light" style="padding: 60px">
                    <div class="text-center">
                        <h3>Log In</h3>
                    </div>
                    <form asp-controller="Employees" asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-3 mt-3">
                            <input type="email" class="form-control" id="floatingInput" name="email" placeholder="name@example.com">
                            <label for="floatingInput" class="text-dark">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingPassword" name="password" placeholder="Password">
                            <label class="text-dark" for="floatingPassword">Password</label>
                        </div>
                        <div class="text-danger">
                            @Html.ValidationSummary()
                        </div>
                        <div class="checkbox mb-3 mt-2">
                            <label>
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                        </div>
                        <button class="btn btn-lg btn-success form-control" type="submit">Log In</button>
                        <a class="text-decoration-none mt-2" asp-controller="Employees" asp-action="ForgotPass">Forgot password?</a>
                        <hr>
                        <p>
                            Don't have an account?
                            <a class="text-decoration-none mt-1" asp-controller="Employees" asp-action="Register">Register</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>