@model Solucion.Models.Employee

<head>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px;
        }

        .content {
            margin-left: 200px;
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="sidebar bg-secondary">
        <div class="dropdown text-center">
            <nav class="nav flex-column">
                <img class="img-fluid" src="https://riwi.io/wp-content/uploads/2023/07/Fondo-claro-logo.png" alt="">
                <hr>
                <a class="dropdown-item" asp-controller="Employees" asp-action="Home"><i class="fas fa-user"></i>
                    Manage Users</a>
                <hr>
                <a class="dropdown-item" asp-controller="Employees" asp-action="Create"><i class="fas fa-user-plus"></i>
                    Create User</a>
                <hr>
                <a class="dropdown-item" asp-controller="Records" asp-action="History"><i class="fas fa-history"></i>
                    History</a>
                <hr>
                <hr>
                <div>
                    @if (TempData["MessageSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["MessageSuccess"]
                        </div>
                    }
                    @if(ViewBag.Entry == null)
                    {
                        <form asp-controller="Records" asp-action="CheckIn" method="post">
                            <button class="dropdown-item"><i class="fas fa-address-card"></i> Register Entry</button>
                        </form>
                    }
                    else 
                    {
                        <form asp-controller="Records" asp-action="CheckOut" method="post">
                            <button class="dropdown-item"><i class="fas fa-address-card"></i> Register Exit</button>
                        </form>
                    }
                </div>
                <hr>
            </nav>
        </div>
        <form asp-controller="Employees" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger btn-lg" style="position: absolute; bottom: 10px;"><i
                    class="fas fa-sign-out-alt"></i> Logout</button>
        </form>
    </div>

    <nav class="navbar" style="margin-left: 200px;">
        <div class="container">
            <h4 class="mt-1">Create User</h4>
        </div>
    </nav>

    <div class="content">
        <div class="container">
            <div class="card mt-2 bg-dark text-light" style="padding: 60px;">
                <form asp-controller="Employees" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="Email"></label>
                                <input type="email" asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="Phone"></label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="Address"></label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label" asp-for="Password"></label>
                                <input type="password" asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="form-label" asp-for="Role"></label>
                                <select name="Role" class="form-control" asp-for="Role">
                                    <option value="">Seleccionar...</option>
                                    <option value="Employee">Employee</option>
                                    <option value="Administrador">Administrador</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <input class="btn btn-success form-control" value="Create User" type="submit" name="submit" />
                </form>
            </div>
        </div>
    </div>
</body>