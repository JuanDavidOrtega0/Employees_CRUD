@model Solucion.Models.Employee

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5 bg-dark text-light" style="padding: 60px;">
                    <a asp-controller="Employees" asp-action="Index"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24"><path fill="#999999" d="m4 10l-.707.707L2.586 10l.707-.707zm17 8a1 1 0 1 1-2 0zM8.293 15.707l-5-5l1.414-1.414l5 5zm-5-6.414l5-5l1.414 1.414l-5 5zM4 9h10v2H4zm17 7v2h-2v-2zm-7-7a7 7 0 0 1 7 7h-2a5 5 0 0 0-5-5z"/></svg></a>
                    <div class="text-center">
                        <h2 class="text-light">Restore Password</h2>
                        <hr>
                        <form asp-controller="Employees" asp-action="ForgotPass" method="post" class="mt-3">
                            <div class="form-floating mb-3 mt-3">
                                <input type="email" id="floatingInput" name="email" class="form-control" placeholder="example@name.com">
                                <label for="floatingInput" class="text-dark">Email Address</label>
                            </div>
                            <div class="form-floating mb-3 mt-3">
                                <input type="password" id="newPassword" name="newPassword" class="form-control" placeholder="123">
                                <label for="newPassword" class="text-dark">New Password</label>
                            </div>
                            <div class="form-floating mb-3 mt-3">
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" placeholder="123">
                                <label for="confirmPassword" class="text-dark">Confirm Password</label>
                            </div>
                            <button type="submit" class="btn btn-success">Restore Password</button>
                            <div class="text-danger">
                                @Html.ValidationSummary()
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
